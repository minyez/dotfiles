#%Module1.0#####################################################################

set docstr  "VASP 5.4.4 compiled by Intel(R) 2020 update 4 with patch 16052018 for piezoelectric tensor"

proc ModulesHelp { } {
        global dotversion
        puts stderr $docstr
}

module-whatis      $docstr

set VASP_HOME      "[getenv HOME]/local/programs/vasp-5.4.4"
prepend-path PATH  "$VASP_HOME/bin"

# remind the user to relax stack size limit when using vasp
if { [ module-info command load ] } {
  puts stderr "Note: please check stack size by `ulimit -s`. You may need to run `ulimit -s unlimited`."
}

