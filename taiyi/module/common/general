#set-alias myip { curl ipinfo.io/ip }

# personal directory
set    my    "[getenv HOME]/Documents/minyez"
set    myrm  "[getenv HOME]/projects/org-roam"
setenv MY    "$my"
setenv MYRM  "$myrm"
set-alias cm { cd "$MY" }
set-alias cmr { cd "$MYRM" }

